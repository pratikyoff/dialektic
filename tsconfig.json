{
  "compilerOptions": {
    "target": "ESNext", // Use the latest ECMAScript version
    "module": "ESNext", // Use the latest module system
    "moduleResolution": "node", // Resolve modules in a Node.js style
    "esModuleInterop": false, // Enables emit interoperability between CommonJS and ES Modules
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": false, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
    "outDir": "./dist", // Redirect output structure to the dist directory
    "rootDir": "./src", // Specify the root directory of input files
    "resolveJsonModule": true, // Include modules imported with .json extension
    "allowSyntheticDefaultImports": false // Allow default imports from modules with no default export
  },
  "include": ["src/**/*"], // Include all TypeScript files in the src directory
  "exclude": ["node_modules", "**/*.spec.ts"] // Exclude node_modules and test files
}
